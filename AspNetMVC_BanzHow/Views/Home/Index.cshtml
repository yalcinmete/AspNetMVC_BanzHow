@using AspNetMVC_BanzHow.Models
@model UrunKategoriModel
@{
    ViewBag.Title = "Index";

}

<h2>Kurslar</h2>
<hr />
<div class="col-md-12">
    <div class="alert alert-success" role="alert">
        <strong>@Model.UrunSayisi</strong> adet ürün listelendi.
    </div>
</div>
        @*Html.Partial("KategoriMenu",Model.Kategoriler)*@

        @*//PartialViewResult action oluşturmadan da partialview'e model gönderebiliyorsun ama tek bir yerden kontrol edebilmek için partialViewResult kullanıyoruz.*@

        @foreach (var urun in Model.Urunler)
        {
                <div class="col-sm-6 col-md-4">
                    <div class="thumbnail">
                        <img src="	https://placehold.co/350x150/EEE/31343C" alt="...">
                        <div class="caption">
                            <h3>@urun.UrunAdi</h3>

                            @if (urun.Aciklama.Length > 50)
                            {
                                @(urun.Aciklama.Substring(0, 25)+"...")
                            }
                            else
                            {
                                @urun.Aciklama
                            }
                            @*<p><a href="/Home/Details/?id=@urun.UrunId" class="btn btn-primary" role="button">Button</a></p>*@ 
                            @*query stringin bizim route ayarlamalarıyla alakası yok istediğimiz kadar qurey string gönderebiliyoruz.Tabi aralarına & koymak lazım.& ekleyerek kategori de ekleyebilirsin ama controller action parametresinin ismi de aynı olmalı*@
                            <p><a href="/Home/Details/@urun.UrunId" class="btn btn-primary" role="button">Button</a></p>

                            @*veya ;*@
                            @Html.ActionLink("Ürünü İncele", "Details", new {id=@urun.UrunId},new {@class="btn btn-primary"})
                        </div>
                    </div>
                </div>
        }