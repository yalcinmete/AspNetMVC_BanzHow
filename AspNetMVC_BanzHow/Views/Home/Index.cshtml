@using AspNetMVC_BanzHow.Models
@model UrunKategoriModel
@{
    ViewBag.Title = "Index";

}

<h2>Kurslar</h2>
<hr />
<div class="alert alert-success" role="alert">
    <strong>@Model.UrunSayisi</strong> adet ürün listelendi.
</div>

<div class="row">
    <div class="col-md-3">
        @Html.Partial("KategoriMenu",Model.Kategoriler)
    </div>

    <div class="col-md-9">
        @foreach (var urun in Model.Urunler)
        {
            if (urun.Satistami == true)
            {
                <div class="col-sm-6 col-md-4">
                    <div class="thumbnail">
                        <img src="	https://placehold.co/350x150/EEE/31343C" alt="...">
                        <div class="caption">
                            <h3>@urun.UrunAdi</h3>

                            @if (urun.Aciklama.Length > 50)
                            {
                                @(urun.Aciklama.Substring(0, 25)+"...")
                            }
                            else
                            {
                                @urun.Aciklama
                            }
                            <p><a href="#" class="btn btn-primary" role="button">Button</a> <a href="#" class="btn btn-default" role="button">Button</a></p>
                        </div>
                    </div>
                </div>
            }
        }
    </div>


</div>