<!DOCTYPE html>
<html lang="en">
<meta http-equiv="content-type" content="text/html;charset=UTF-8" />
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Banzhow</title>

    <!-- font-awesome -->
    <link href="/banzhow/css/font-awesome.min.css" rel="stylesheet">
    <!--[if lt IE 9]>
    <script src="//html5shiv.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
    <!--[if IE 7]>
    <link href="/banzhow/css/font-awesome-ie7.css" rel="stylesheet">
    <![endif]-->
    <!-- Bootstrap core CSS -->
    <link href="/banzhow/css/bootstrap.css" rel="stylesheet">

    <!-- custom CSS -->
    <link href="/banzhow/css/style.css" rel="stylesheet">
    <!--[if lte IE 8]>
    <link href="/banzhow/css/ie8.css" rel="stylesheet">
    <![endif]-->
    <!--[if lte IE 7]>
    <link href="/banzhow/css/ie7.css" rel="stylesheet">
    <![endif]-->
    <!-- JavaScript -->
    <script type="text/javascript" src="/banzhow/js/jquery-1.10.2.js"></script>
    <script type="text/javascript" src="/banzhow/js/bootstrap.js"></script>
    <script type="text/javascript" src="/banzhow/js/plugins.js"></script>
    <!--[if lte IE 7]>
    <script type="text/javascript" src="/banzhow/js/boxsizing/jquery.boxsizing.js"></script>
    <![endif]-->
    <script type="text/javascript" src="/banzhow/js/banzhow.js"></script>
    <style>
        body {
            margin-top: 15px;
        }
    </style>
</head>


<body>


    <nav class="navbar navbar-fixed-top navbar-inverse" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>

                <a class="navbar-brand" href="index.html">Banzhow</a>
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse navbar-ex1-collapse">
                <ul class="nav navbar-nav navbar-right">
                    @*<li class="active"><a href="/">Home</a></li>*@
                    <li class="active">
                        @Html.ActionLink("Anasayfa", "Index", "Home")
                    </li>
                    <li><a href="/Home/Services">Services</a></li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" data-hover="dropdown">Portfolio <i class="fa fa-angle-down"></i></a>
                        <ul class="dropdown-menu">
                            <li><a href="portfolio-1-col.html">1 Column Portfolio</a></li>
                            <li><a href="portfolio-2-col.html">2 Column Portfolio</a></li>
                            <li><a href="portfolio-3-col.html">3 Column Portfolio</a></li>
                            <li><a href="portfolio-item.html">Single Portfolio Item</a></li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" data-hover="dropdown">Blog <i class="fa fa-angle-down"></i></a>
                        <ul class="dropdown-menu">
                            @*<li><a href="/Blog">Blog Home</a></li>*@
                            <li>
                                @Html.ActionLink("Blog Home", "Index", "Blog")
                            </li>
                            @*<li><a href="/Blog/Details">Blog Post</a></li>*@
                            <li>
                                @Html.ActionLink("Blog Post", "Details", "Blog")
                            </li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" data-hover="dropdown">Other Pages <i class="fa fa-angle-down"></i></a>
                        <ul class="dropdown-menu">
                            <li><a href="full-width.html">Full Width Page</a></li>
                            <li><a href="sidebar.html">Sidebar Page</a></li>
                            <li><a href="faq.html">FAQ</a></li>
                            <li><a href="404.html">404</a></li>
                        </ul>
                    </li>
                    <li><a href="contact.html">Contact</a></li>
                </ul>
            </div><!-- /.navbar-collapse -->
        </div><!-- /.container -->
    </nav>

    <div class="container body-content">
        @if (IsSectionDefined("Kategori"))
        {
            <div class="row">
                <div class="col-md-3">
                    @*//PartialViewResult action oluşturmadan da partialview'e model gönderebiliyorsun ama tek bir yerden kontrol edebilmek için partialViewResult kullanıyoruz.*@
                    @RenderSection("Kategori", false)
                </div>
                <div class="col-md-9">
                    @RenderBody()
                </div>
            </div>
        }
        else
        {
            <div class="row">
                <div class="col-md-12">
                    @RenderBody()
                </div>
            </div>
        }
    </div>

    @*@Html.Partial("_Footer")*@

    <div class="footer-after">
        <div class="container">
            <div class="row">
                <p class="col-md-10">©2014 All rights reserved. Designed by John Doe.</p>
                <p class="col-md-2 legal"><a href="#" rel="nofollow">Legal Notice</a></p>
            </div><!-- /.row -->
        </div>
    </div>

    <!-- Switcher -->
    <script type="text/javascript" src="/banzhow/js/switcher/switcher.js"></script>
    <link href="/banzhow/js/switcher/switcher.css" rel="stylesheet">

    <div id="switcher-options">
        <a href="#" class="switcher-btn"><i class="fa fa-cog"></i></a>
        <small>Switch Theme Colour</small>
        <ul class="list-unstyled list-inline">
            <li><a href="#" class="theme-colour default" data-name="default"></a></li>
            <li><a href="#" class="theme-colour blue" data-name="blue"></a></li>
            <li><a href="#" class="theme-colour violet" data-name="violet"></a></li>
            <li><a href="#" class="theme-colour red" data-name="red"></a></li>
            <li><a href="#" class="theme-colour orange" data-name="orange"></a></li>
        </ul>
    </div>
    <!-- /Switcher -->



</body>

</html>
